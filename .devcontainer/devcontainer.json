{
    "name": "Python 3",
    "image": "mcr.microsoft.com/devcontainers/python:3.13",
    "containerEnv": {
        "PYTHONDONTWRITEBYTECODE": "1",
        "PYTHONUNBUFFERED": "1",
        "PIP_USE_PEP517": "1"
    },
    "runArgs": [
        "--network=devnet"
    ],
    "postCreateCommand": "pipx install poetry && poetry config virtualenvs.in-project true && poetry install --with dev",
    "customizations": {
        "vscode": {
            "settings": {
                "editor.formatOnSave": true,
                "python.formatting.provider": "black",
                "python.analysis.typeCheckingMode": "standard",
                "python.defaultInterpreterPath": ".venv/bin/python",
                "ruff.enable": true
            },
            "extensions": [
                "ms-python.python",
                "charliermarsh.ruff",
                "ms-toolsai.jupyter"
            ]
        }
    },
    "forwardPorts": [
        8000
    ],
    "remoteUser": "vscode"
}