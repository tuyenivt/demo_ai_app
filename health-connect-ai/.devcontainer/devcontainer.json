{
    "name": "Python 3",
    "image": "mcr.microsoft.com/devcontainers/python:3.10",
    "containerEnv": {
        "PYTHONDONTWRITEBYTECODE": "1",
        "PYTHONUNBUFFERED": "1",
        "PIP_USE_PEP517": "1"
    },
    "postCreateCommand": "pip install --upgrade pip && if [ -f requirements.txt ]; then pip install -r requirements.txt && pip install https://s3-us-west-2.amazonaws.com/ai2-s2-scispacy/releases/v0.5.4/en_core_sci_md-0.5.4.tar.gz; fi",
    "customizations": {
        "vscode": {
            "settings": {
                "python.linting.enabled": true,
                "python.linting.pylintEnabled": true
            },
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.autopep8"
            ]
        }
    },
    // "forwardPorts": [], // Use 'forwardPorts' to make a list of ports inside the container available locally
    "remoteUser": "vscode"
}